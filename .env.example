# Database connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/llmtxt

# Anthropic API key for Claude Haiku summarization
ANTHROPIC_API_KEY=sk-ant-xxx
# ANTHROPIC_MODEL=claude-haiku-4-5

# Firecrawl API key for site mapping and scraping
FIRECRAWL_API_KEY=fc-xxx

# CORS configuration (comma-separated origins)
# For production, set to your frontend domain(s)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Storage configuration
# IMPORTANT: Use "s3" for production (Railway), "local" only for development
# Railway will fail to start if STORAGE_TYPE=local (ephemeral filesystem)
STORAGE_TYPE=local

# Local storage: output directory for generated files (dev only)
OUTPUTS_DIR=/outputs

# S3/R2 storage (required for Railway production)
# Cloudflare R2 recommended - S3-compatible with no egress fees
# S3_BUCKET=your-bucket-name
# S3_ENDPOINT_URL=https://<account-id>.r2.cloudflarestorage.com
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
